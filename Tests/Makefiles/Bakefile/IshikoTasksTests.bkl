ishikopath = envvar("ISHIKO_CPP");
import $(ishikopath)/TestFramework/Include/Ishiko/TestFramework/TestFrameworkCore.bkl;
import $(ishikopath)/Tasks/Include/Ishiko/IshikoTasks.bkl;

toolsets = gnu vs2017 vs2015 vs2013;

gnu.makefile = ../GNUmakefile/GNUmakefile;
vs2017.solutionfile = ../VC15/IshikoTasksTests.sln;
vs2015.solutionfile = ../VC14/IshikoTasksTests.sln;
vs2013.solutionfile = ../VC12/IshikoTasksTests.sln;

program IshikoTasksTests : IshikoTasks, IshikoTestFrameworkCore
{
    if ($(toolset) == gnu)
    {
        cxx-compiler-options = "-std=c++11";
        libs += IshikoTasks IshikoTestFrameworkCore IshikoProcess IshikoErrors boost_filesystem;
    }

    if ($(toolset) != gnu)
    {
        archs = x86 x86_64;
    }

    headers
    {
        ../../Source/TaskTests.h
        ../../Source/SyncFunctionTaskTests.h
        ../../Source/TasksTests.h
        ../../Source/TaskRunnerTests.h
    }

    sources
    {
        ../../Source/main.cpp
        ../../Source/TaskTests.cpp
        ../../Source/SyncFunctionTaskTests.cpp
        ../../Source/TasksTests.cpp
        ../../Source/TaskRunnerTests.cpp
    }
}
